{
    "extends": [
        "tslint-angular"
    ],
    "rules": {
        "curly": [true, "ignore-same-line"],
        "max-line-length": [true, {
            "limit": 120,
            "ignore-pattern": ""
        }],
        "no-console": {
            "options": ["log", "time", "timeEnd", "trace", "assert", "clear",
                "count", "debug", "profile", "profileEnd", "select", "table", "info"],
            "severity": "warning"
        },
        "no-empty-interface": false,
        "no-inferrable-types": false
    }
}
